---
export interface Props {
  title: string;
  description: string;
  url: string;
  emoji: string;
}

const { href, title, description, url, emoji } = Astro.props;
---

<li
  class="block rounded-md border border-gray7 px-4 py-4 transition-effects hover:border-gray8 focus:outline-none focus:ring focus:ring-gray7 dark:border-gray7-dark dark:hover:border-gray8-dark dark:focus:ring-gray7-dark my-7"
>
  <a href={url} target="_blank">
    <h2 class="flex items-center">
      {title}
      <span>
        <img src={emoji} width="30px" />
      </span>
    </h2>
    <p class="text-sm font-thin">
      {description}
    </p>
  </a>
</li>
